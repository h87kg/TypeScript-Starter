# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Set default charset
[*]
charset = utf-8

# Tab indentation
[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# The indent size used in the `package.json` file cannot be changed
[{*.yml,*.yaml,*.json,package.json}]
indent_style = space
indent_size = 2